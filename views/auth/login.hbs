<div class="auth">
    <div class="row">
        <div class="col s12">
            <ul class="tabs">
                <li class="tab col s6"><a href="#login" class="active">Войти</a></li>
                <li class="tab col s6"><a href="#register">Регистрация</a></li>
            </ul>
        </div>
        <div id="login" class="col s6 offset-s3">
            <h2>Вход в магазин</h2>
            <form action="/auth/login" method="post">
                <div class="input-field">
                    <input id="email" type="email" name="email" class="validate" required>
                    <label for="email">Email</label>
                    <span class="helper-text" data-error="введите email"></span>
                </div>
                <div class="input-field">
                    <input id="password" type="password" name="password" class="validate" required>
                    <label for="password">Пароль</label>
                    <span class="helper-text" data-error="введите пароль"></span>
                </div>
                <button class="btn btn-primary" type="submit">Войти</button>
            </form>
        </div>
        <div id="register" class="col s6 offset-s3">
            <h2>Регистрация</h2>
            <form action="/auth/register" method="post">
                <div class="input-field">
                    <input id="remail" type="email" name="email" class="validate" required>
                    <label for="remail">Email</label>
                    <span class="helper-text" data-error="введите email"></span>
                </div>
                <div class="input-field">
                    <input id="rpassword" type="password" name="password" class="validate" required>
                    <label for="rpassword">Пароль</label>
                    <span class="helper-text" data-error="введите пароль"></span>
                </div>
                <div class="input-field">
                    <input id="confirm" type="password" name="confirm" class="validate" required>
                    <label for="confirm">Пароль ещё раз</label>
                    <span class="helper-text" data-error="введите пароль"></span>
                </div>
                <button class="btn btn-primary" type="submit">Зарегистрироваться</button>
            </form>
        </div>
    </div>
</div>
